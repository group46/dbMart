<%# login and account creation form %>
<% include partials/header.ejs %>
<div class="container">
    <% if (typeof message != 'undefined') { %>
        <h2><%= message %></h2>
    <% } %>
        <form class="price-range-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="min_price" id="min_price" placeholder="Min Price" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="max_price" id="max_price" placeholder="Max Price" required>
            </div>
            <button type="submit" class="btn btn-primary float-right">Set Price Range</button>
        </form>
    </div>
</div>
